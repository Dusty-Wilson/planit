<body id="trips_all">
<% if @confirmed_trip_partcipations.length > 0 %>
<h2>My Trips</h2>
<p><div class="pure-button pure-button-active"><%= link_to 'New Trip', new_trip_path %></div><br /></p>

<div class="pure-table">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Location</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Creator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @confirmed_trip_partcipations.each do |participation| %>
        <tr>
          <td><%= link_to participation.trip.name, participation.trip %></td>
          <td><%= link_to participation.trip.description, participation.trip %></td>
          <td><%= participation.trip.location %></td>
          <td><%= participation.trip.start_date.strftime("%m/%d/%Y") %></td>
          <td><%= participation.trip.end_date.strftime("%m/%d/%Y") %></td>
          <td><%= participation.trip.creator.first_name %></td>
          <td><%= link_to 'Activities', trip_activities_path(participation.trip) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>


<% if @pending_trip_partcipations.length > 0 %>
<h2>Unconfirmed Trips</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Location</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Creator</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @pending_trip_partcipations.each do |participation| %>
        <% trip = participation.trip %>
        <tr>
          <td><%= participation.trip.name %></td>
          <td><%= participation.trip.description %></td>
          <td><%= participation.trip.location %></td>
          <td><%= participation.trip.start_date %></td>
          <td><%= participation.trip.end_date %></td>
          <td><%= participation.trip.creator_id %></td>
          <td>
            <form method="post" action="/trip_participations/<%=participation.id%>">
              <input name="_method" type="hidden" value="put" />
              <input type="hidden" name="trip_participation[confirmed]" value="true" >
              <input type="submit" value="going">
            </form>
          </td>
          <td><%= button_to 'Remove', "/trip_participations/#{participation.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<div class="pure-table pure-table-bordered" id="trips_calendar"></div>
</body>
