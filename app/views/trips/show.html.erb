</form><br>



<p><%= link_to 'See all Polls', trip_polls_path(@trip.id) %></p>
<div id="activity_list">
  <h1>Activities</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Location</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Trip</th>
        <th>Creator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.description %></td>
          <td><%= activity.location %></td>
          <td><%= activity.start_time %></td>
          <td><%= activity.end_time %></td>
          <td><%= activity.trip_id %></td>
          <td><%= activity.creator_id %></td>
          <td><%= link_to 'Show', activity_path(activity) %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

