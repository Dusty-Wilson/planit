<div class="pure-button pure-button-active"><%= link_to 'Edit', edit_trip_path %></div>
<div class="pure-button pure-button-active"><%= link_to 'Delete', @trip, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<div class="pure-button pure-button-active"><%= link_to 'New Activity', new_trip_activity_path(@trip) %></div>
<div class="pure-button pure-button-active"><%= link_to 'New Poll', new_trip_poll_path(@trip) %></div>
<div class="pure-button pure-button-active"><%= link_to 'Add an expense', new_trip_expense_path(@trip) %></div>

<h1>
  <strong>
  <%= @trip.name %></strong>
</h1>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>


<p>
  <strong>Location:</strong>
  <%= @trip.location %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @trip.start_date.strftime("%m/%d/%Y") %>
</p>

<p>
  <strong>End date:</strong>
  <%= @trip.end_date.strftime("%m/%d/%Y") %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @trip.creator_id %>
</p>

<p><strong>Travelers:</strong></p>
<ul>
  <% @trip.trip_participations.each do |trip_participation| %>
  <li><%= trip_participation.traveler.first_name %> <%= trip_participation.traveler.last_name %>
  <% if trip_participation.confirmed == false %>
     (invitation pending)
  <% end %>

  </li>
  <% end %>
</ul>


