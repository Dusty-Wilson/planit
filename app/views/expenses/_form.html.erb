<%= form_for([@trip, @expense]) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :cost_in_cents %><br>
    <%= f.number_field :cost_in_cents %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_field :notes %>
  </div>
  <div class="field">
    <%= f.label :activity_id %><br>
    <%= f.number_field :activity_id %>
  </div>
  <p>How much did each person pay?</p>
  <% @trip.trip_participations.each do |splitter| %>
	  <%= f.fields_for :charges do |builder| %>
	  	<fieldset>
	  		<%= builder.label :payment, splitter.traveler.first_name %>
	  		<%= builder.number_field :payment %>
	  		<%#= builder.label "Not splitting this expense" %>
	  		<%#= builder.check_box :_destroy %>
	  	</fieldset>
	  <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>