<h1>Polls</h1>

<%= link_to 'New Poll', new_trip_poll(@trip) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Trip</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @polls.each do |poll| %>
      <tr>
        <td><%= poll.name %></td>
        <td><%= @trip.name %></td>
        <td><%= User.find(poll.creator_id).first_name %></td>
        <td><%= link_to 'Show', trip_poll_path(poll.trip_id, poll.id) %></td>
        <td><%= link_to 'Edit', edit_trip_poll_path(poll.trip_id, poll.id) %></td>
        <td><%= link_to 'Delete', trip_poll_path(poll.trip_id, poll.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>()
</table>